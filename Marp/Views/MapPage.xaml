<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
	xmlns:local="clr-namespace:Marp;assembly=Marp"
	xmlns:b="clr-namespace:Xamarin.Forms.Behaviors;assembly=Xamarin.Forms.Behaviors"
	x:Class="Marp.MapPage">
	<ContentPage.Title>
		Map Project
	</ContentPage.Title>

	<ContentPage.Content>

		<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="0">
			<maps:Map MapType="Street" 
					  HorizontalOptions="FillAndExpand"
					  VerticalOptions="FillAndExpand" 
					  IsShowingUser="true" IsVisible="true" x:Name="_map">
				<maps:Map.Behaviors>
					<local:ExtendedMapBehavior ItemsSource="{Binding Pins}" />
				</maps:Map.Behaviors>
			</maps:Map>

			<SearchBar Text="{Binding SearchAddress}" SearchCommand="{Binding SearchCommand}">
			</SearchBar>
		</StackLayout>

	</ContentPage.Content>
</ContentPage>
